{
  "name": "foreas-driver-backend",
  "version": "1.0.0",
  "description": "Backend for FOREAS Driver application with WebSocket support",
  "main": "websocket-server.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node src/index.ts",
    "dev:stripe": "ts-node src/index.ts",
    "dev:ws": "nodemon websocket-server.js",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "prepare": "husky install",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "demo:stripe": "tsx scripts/demo-stripe.ts",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "keywords": [
    "foreas",
    "websocket",
    "realtime",
    "driver",
    "vtc"
  ],
  "author": "FOREAS",
  "license": "MIT",
  "dependencies": {
    "@mistralai/mistralai": "^1.7.5",
    "@prisma/client": "^5.0.0",
    "@sentry/node": "^10.3.0",
    "@trpc/server": "^10.45.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "pino": "^9.8.0",
    "rate-limiter-flexible": "^7.2.0",
    "socket.io": "^4.8.1",
    "stripe": "^14.25.0",
    "superjson": "^2.2.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.10",
    "@types/supertest": "^2.0.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.1.0",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "directories": {
    "example": "examples"
  },
  "type": "commonjs"
}
