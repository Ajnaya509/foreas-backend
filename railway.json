{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build && npm prune --omit=dev"
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "restartPolicyType": "ALWAYS",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 90,
    "numReplicas": 1
  }
}
