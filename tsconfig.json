{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts",
    "src/helpers/**/*",
    "src/routes/**/*"
  ],
  "exclude": [
    "src/__tests__",
    "src/app",
    "src/lib",
    "src/server",
    "src/tests",
    "src/webhooks",
    "src/services",
    "src/middleware",
    "src/utils",
    "src/config",
    "src/demo",
    "src/env.ts",
    "src/routes/ajnaya.ts"
  ]
}
